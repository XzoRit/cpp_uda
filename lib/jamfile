import testing
    ;

constant inc_dir
    : .
    ;

constant src_dir
    : $(inc_dir)/lib
    ;

constant test_sources
    : [ glob $(src_dir)/*.test.cpp ]
    ;

constant sources
    : [ glob $(src_dir)/*.cpp : $(test_sources) ]
    ;

lib lib_lib
    : $(sources)
    : <include>$(inc_dir)
    :
    : <include>$(inc_dir)
    ;

run $(test_sources)
    : --color_output=false
    :
    : <library>lib_lib
      <library>/site-config//bext-ut
    : test
    ;
